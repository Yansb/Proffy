{
    "env": {
        "es2020": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "import/extensions":[
            "error",
            "ignorePackages",
            {
              "ts": "never",
              "tsx": "never"
            }
          ],
        "camelcase": "off",
        "no-unused-vars": "warn",
        "class-methods-use-this":"off"
    },
    "settings": {
        "import/resolver":{
          "typescript": {}
        }
    }
}
